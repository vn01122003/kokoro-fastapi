# Kokoro FastAPI Production Environment Configuration

# Application Settings
API_TITLE=Kokoro FastAPI TTS
API_DESCRIPTION=High-quality Text-to-Speech API with OpenAI compatibility
API_VERSION=0.3.0
HOST=0.0.0.0
PORT=8880

# CORS Settings
CORS_ENABLED=true
CORS_ORIGINS=["*"]

# Web Player
ENABLE_WEB_PLAYER=true

# Model Settings
USE_GPU=false
DEVICE=cpu
DOWNLOAD_MODEL=true

# Performance Settings
ONNX_NUM_THREADS=4
ONNX_INTER_OP_THREADS=2
ONNX_EXECUTION_MODE=parallel
ONNX_OPTIMIZATION_LEVEL=all
ONNX_MEMORY_PATTERN=true

# Logging
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1

# Redis (if using caching)
REDIS_URL=redis://redis:6379/0

# Security (uncomment and configure for production)
# SECRET_KEY=your-secret-key-here
# API_KEY=your-api-key-here

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
TTS_RATE_LIMIT_PER_MINUTE=10

# File Management
MAX_FILE_SIZE=10485760  # 10MB
TEMP_FILE_CLEANUP_INTERVAL=3600  # 1 hour
